<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head')  %> 

<body>

<%- include('../partials/header')  %> 
<section class = "container">
<h2>Asignar procesos a <%=rol.name%></h2>
    <div class="row">
        <div class="col-6">
            <h6>Procesos Asignados</h6>
            <%rol.profiles.map(profile=>{%>
                <a href="/roles/deleteProfiles/<%=rol.id%>/<%=profile.id%>">
                <div class="p-2 mb-2 bg-light text-dark shadow-sm" >
                  <div class="row">
                      <div class="col-5">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2 text-success" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                          </svg>
                    </div>
                    <div class="col-1 text-start">
                        <h6 class="card-title"><%=profile.name%></h6>
                        
                      </div>
                    </div>
                  </div>
               </a>
            <%})%>
        </div>
        <div class="col-6">
            <h6>Procesos No Asignados</h6>
            <%profiles.map(profile=>{%>
                <a href="/roles/addProfiles/<%=rol.id%>/<%=profile.id%>">
                <div class="p-2 mb-2 bg-light text-dark shadow-sm" >
                  <div class="row">
                      <div class="col-5">
                      
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x text-danger" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                          </svg>
                    </div>
                    <div class="col-1 text-start">
                        <h6 class="card-title"><%=profile.name%></h6>
                        
                      </div>
                    </div>
                  </div>
               </a>
            <%})%>
        </div>
    </div>
</section>

<%include('../partials/footer')%> 
<%include('../partials/bootstrap')%> 

</body>

</html>