<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head')  %> 

<body>

<%- include('../partials/header')  %> 
<section class = "contenedor-registro">

    <form action="/roles/create" method="POST" class="formulario-registro needs-validation" novalidate>
       
        <p class="segundo-titulo">Modificar Datos </p>
        
            <div class="form-row">
              <div class="col-md-12 mb-3">
                <label for="validationCustom01">nombre</label>
                <input type="text" class="form-control" id="validationCustom01" required name="name" placeholder="nombre de rol">
                <div class="valid-feedback">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"/>
                      </svg>
                </div>
              </div>
              <div class="col-md-12 mb-3">
                <label for="validationCustom02">descripcion</label>
                <input type="text" class="form-control" id="validationCustom02" name="description" required placeholder="description">
                <div class="valid-feedback">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"/>
                      </svg>
                </div>
              </div>
              <div class="col-md-12 mb-3">
                <h5>Asignar procesos</h5>
                <%profiles.map(profile=>{%>
                  <div class="row">
                    <div class="col-6">
                      <label for="profile<%=profile.id%>"><%=profile.name%></label>
                    </div>
                <div class="col-6">
                  <input type="checkbox" name="profiles" value="<%=profile.id%>" id="profile<%=profile.id%>" ></input>
                </div>
                
              </div>
                <%})%>       
       
               
              </div>
            </div>
            
            <button class="btn btn-primary col-md-12 mb-3" type="submit">crear</button>
          </form>
</section>

<%include('../partials/footer')%> 
<%include('../partials/bootstrap')%> 

</body>

</html>